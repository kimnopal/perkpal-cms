{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name"
        },
        "sub_categories": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::sub-category.sub-category",
            "mappedBy": "category"
        },
        "perks": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::perk.perk",
            "mappedBy": "category"
        }
    }
}
